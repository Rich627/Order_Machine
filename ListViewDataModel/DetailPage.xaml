<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListViewDataModel.DetailPage">
    <ContentPage.Content>
        <StackLayout>
            <Label FontSize="40" Text="{Binding Title}" TextColor="Black" HorizontalOptions="Center" />
            <Label FontSize="20" Text="{Binding Description}" TextColor="Black" HorizontalOptions="Center" />
            <Image Source="{Binding Image}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>